<section>
    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col text-end">
                <a href="/admin/add-product" class="btn btn-success">Add Products</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Title</th>
                        <th scope="col">Category</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{this.Name}}</td>
                        <td>{{this.Category}}</td>
                        <td>{{this.Description}}</td>
                        <td>
                            <img src="/images/product-images/{{this._id}}.jpg" alt="{{this.Name}}" width="50" height="50" class="img-thumbnail">
                        </td>
                        <td>
                            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary btn-sm me-2">Edit</a>
                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete {{this.Name}}?')">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>

<style>
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
</style>
